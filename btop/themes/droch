#!/usr/bin/env python3
import asyncio
import time
from telethon import TelegramClient

# === ТВОИ ДАННЫЕ ===
api_id = 24486705
api_hash = '97a01118f5f2711f41587a717d03bb37'

# === НАСТРОЙКИ ===
target = -1003437820587                            # ← твоя группа «Общение»
message = 'дроч'                        # ← поменяй на свою фразу
interval_minutes = 11                             # ← рекомендую 10–30 минут (меньше = выше риск бана)

client = TelegramClient('spam_session', api_id, api_hash)

async def main():
    await client.start()
    print("Запущен и готов спамить в «Общение» каждые", interval_minutes, "минут")

    while True:
        try:
            await client.send_message(target, message)
            print(f"[{time.strftime('%H:%M:%S')}] Отправлено: {message}")
        except Exception as e:
            print(f"Ошибка: {e}")

        await asyncio.sleep(interval_minutes * 60)

if __name__ == '__main__':
    asyncio.run(main())
